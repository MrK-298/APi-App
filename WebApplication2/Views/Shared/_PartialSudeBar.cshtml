@using Microsoft.AspNetCore.Identity;

@using WebApplication1.Data;
<!-- Sidebar -->
<div class="sidebar">
    <!-- Sidebar user (optional) -->
    <li class="rd-nav-item">
        @{
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    @if ((User.FindFirst("Image"))!=null)
                    {
                        string image = User.FindFirst("Image").ToString();
                        var parts = image.Split(':');
                        if (parts.Length == 2)
                        {
                            image = parts[1].Trim();
                        }
                        <img class="img-circle elevation-2" alt="User Image" src="~/Content/ImagesAcc/@image" />
                    }
                    else
                    {
                        <img class="img-circle elevation-2" alt="User Image" src="~/Content/th.jpg" />
                    }
                </div>
                <div class="info">
                    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="navbar-right">
                        @if (User.FindFirst("Username") != null)
                        {
                        string fullName = User.FindFirst("Username").ToString();
                        var parts = fullName.Split(':');
                        if (parts.Length == 2)
                        {
                        fullName = parts[1].Trim();
                        }
                        @Html.ActionLink("Xin Chào " + fullName + "!", "Updata", "Account", new { area = "" }, htmlAttributes: new { title = "Manage", @class = "rd-nav-link" })
                        }
                        <li class="rd-nav-item"><a class="rd-nav-link">Đăng Xuất</a></li>
                    </form>

                </div>
            </div>

        }
    </li>


    <!-- SidebarSearch Form -->
    <div class="form-inline">
        <div class="input-group" data-widget="sidebar-search">
            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-sidebar">
                    <i class="fas fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
